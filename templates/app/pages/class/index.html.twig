{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app_pages_class') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app_pages_class') }}
{% endblock %}

{% block body %}
    <h1>Class page</h1>

    <div class="row">
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_PROF') %}
            <div class="col-8">
        {% else %}
            <div class="col-12">
        {% endif%}

        <h3>Liste des cours</h3>

        {% for lesson in lessons %}
            <div class="card text-bg-light mb-3">
                <div class="card-header">
                    <h4 class="card-title text-primary me-auto">{{ lesson.titre }}</h4>
                </div>
                <div class="card-body">
                    Description : {{ lesson.desciption }}<br>
                    <div class="text-center mt-3"><a class="btn btn-lg btn-warning text-white" href="{{ path('app_lesson_section', {'lessonSection' : lesson.titre}) }}">Acc√©der au cours</a></div>
                </div>
            </div>
        {% endfor %}

        </div>
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_PROF') %}
            <div class="col-4">
                <h3>Ajouter un cours</h3>

                {{ form_start(form) }}
                    {{ form_row(form.titre) }}
                    {{ form_row(form.desciption) }}
                    {{ form_row(form.matter) }}
                    {{ form_row(form.position) }}
                <button type="submit" class="btn btn-outline-primary">Enregistrer</button>
            </div>
        </div>
    </div>
        {{ form_end(form) }}
    {% endif %}
{% endblock %}
